{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@assets/*": [
        "./public/assets/*"
      ],
      "@fonts/*": [
        "./public/assets/fonts/*"
      ],
      "@images/*": [
        "./public/assets/images/*"
      ],
    },
    "strict": false
  },
  "typeRoots": [
    "node_modules/@types",
    "@types"
  ],
  "include": [
    "next-env.d.ts",
    "@types/index.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
